<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="#ffffff"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.google.sample.cloudvision.MainActivity"
                tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="400dp"
        android:layout_height="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#0C504C4C"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/image_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="사진 버튼을 눌러 사진을 업로드해주세요." />

            <TextView
                android:id="@+id/music_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:background="@drawable/back"
                android:text="추천 노래"
                android:layout_marginBottom="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/heart_on" />

                <ImageButton
                    android:id="@+id/playmusic"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:onClick="music_play"
                    android:layout_marginLeft="200dp"
                    android:background="@drawable/round_rectangle"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@android:drawable/ic_media_play" />


        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>