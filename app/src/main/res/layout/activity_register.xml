<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/header_logo2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/regist_text" />


    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/user" />


    <TextView
        android:id="@+id/p_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_logo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:text=" ID  :"
        android:textSize="22dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/et_eamil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_logo"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/p_id"
        android:ems="15"
        android:hint="user@email.com"
        android:inputType="textEmailAddress"
        android:textColor="#363636"
        android:textColorHint="#525252"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/p_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pw :"
        android:textSize="22dp"
        android:layout_below="@+id/p_id"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_eamil"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/p_pw"
        android:ems="15"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#363636"
        android:textColorHint="#525252" />


    <EditText
        android:id="@+id/et_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/p_pw"
        android:ems="15"
        android:hint="password check"
        android:inputType="textPassword"
        android:textColor="#363636"
        android:textColorHint="#525252" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_check"
        android:layout_marginTop="60dp" >

        <Button
            android:id="@+id/btn_signUp"
            android:text="@string/signup"
            android:onClick="singUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle"
            android:layout_weight="1"
            android:layout_marginStart="45dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btn_back"
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="45dp"
            android:background="@drawable/round_rectangle"
            android:onClick="back" />


    </LinearLayout>




</RelativeLayout>