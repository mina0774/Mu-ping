<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/header_logo2"
        android:layout_width="403dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/p_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user"
        android:layout_below="@+id/header_logo2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:id="@+id/et_eamil2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_logo2"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/p_id2"
        android:ems="15"
        android:hint="user@email.com"
        android:inputType="textEmailAddress"
        android:textColor="#363636"
        android:textColorHint="#525252" />


    <ImageView
        android:id="@+id/p_pw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_id2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/lock" />


    <EditText
        android:id="@+id/et_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_eamil2"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/p_pw2"
        android:ems="15"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#363636"
        android:textColorHint="#525252" />


    <Button
        android:id="@+id/signIn"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_below="@+id/et_password2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="signIn"
        android:background="@drawable/login_button"
        android:text="로그인" />

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_below="@id/signIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_button"
        android:onClick="register"
        android:text="회원가입" />

    <TextView
        android:id="@+id/textviewfindpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 기억나지 않습니까?"
        android:layout_below="@id/btn_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#707070"
        android:onClick="findPw"
        />



</RelativeLayout>